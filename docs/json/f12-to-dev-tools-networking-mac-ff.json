{
  "title": "Use F12 to open Dev Tools Network Tab (Mac + Firefox)",
  "rules": [
    {
      "description": "Use F12 to open Dev Tools Network Tab (Mac + Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": [
                "option",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
